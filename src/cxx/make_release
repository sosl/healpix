#!/bin/sh

NAME=HealpixCxx-3.20
URL=http://svn.code.sf.net/p/healpix/code/branches/branch_v310r461/src/cxx
REV=HEAD

svn export -r ${REV} ${URL} ${NAME} &&\
cd ${NAME} &&\
autoconf &&\
rm -rf autom4te.cache make_release &&\
cd .. &&\
tar cvzf ${NAME}-src.tar.gz ${NAME} &&\
cd ${NAME} &&\
./configure &&\
make test &&\
make doc &&\
cd .. &&\
mv ${NAME}/doc ./${NAME}-doc &&\
tar cvzf ${NAME}-doc.tar.gz ${NAME}-doc &&\
rm -rf ${NAME}-doc &&\
rm -rf ${NAME}
